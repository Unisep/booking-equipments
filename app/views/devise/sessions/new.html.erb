<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default devise-bs">
    <div class="panel-heading">
      <h4><%= t('.sign_in', :default => "Sign in") %></h4>
    </div>
    <div class="panel-body">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }) do |f| %>
        <div class="form-group">
          <%= f.input :email, autofocus: true %>
        </div>
        <div class="form-group">
          <%= f.input :password, as: :password %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="checkbox">
            <%= f.input :remember_me, as: :boolean, label: t('.remember_me', default: "Remember me") %>
          </div>
        <% end %>
        <%= f.submit  t('.sign_in', :default => "Sign in"), class: "btn btn-primary btn-block" %>
      <% end %>
    </div>
  </div>
  <%= render "devise/shared/links" %>
</div>
